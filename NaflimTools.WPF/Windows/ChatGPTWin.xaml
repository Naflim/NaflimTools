<metro:MetroWindow x:Class="NaflimTools.WPF.Windows.ChatGPTWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:NaflimTools.WPF.Windows"
        mc:Ignorable="d" TitleCharacterCasing="Normal"
        Title="ChatGPT" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="1" Grid.Column="0" Margin="5"/>
        <Button Grid.Row="1" Grid.Column="1" Width="120" Height="40" FontSize="20"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" 
                BorderThickness="0" >发送</Button>
    </Grid>
</metro:MetroWindow >
