<metro:MetroWindow x:Class="NaflimTools.WPF.Windows.RecordShortcutKeysWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NaflimTools.WPF.Windows"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d" PreviewKeyDown="Grid_KeyDown" Name="baseWin"
        Title="记录快捷键" WindowStartupLocation="CenterScreen" Height="200" Width="300">
    <Grid KeyDown="Grid_KeyDown">
        <TextBlock x:Name="txtbMessage" 
                   TextAlignment="Center" 
                   VerticalAlignment="Center"
                   Text="{Binding ShortcutKeys.Title, ElementName=baseWin}"/>
    </Grid>
</metro:MetroWindow>
